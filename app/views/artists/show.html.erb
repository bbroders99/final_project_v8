<div class="page-header">
	<h1>Artist #<%= @artist.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>First name</dt>
  <dd><%= @artist.first_name %></dd>

  <dt>Last name</dt>
  <dd><%= @artist.last_name %></dd>

  <dt>Email</dt>
  <dd><%= @artist.email %></dd>

  <dt>Bio</dt>
  <dd><%= @artist.bio %></dd>

  <dt>Average rating</dt>
  <dd>
	   <% a = @artist.id %>
	   <% b = Idea.where(:artist_id => a) %>
	   <% c = 0.0 %>
	   <% b.each do |b| %>
	    <% if b.rating != nil %>
	      <% c = b.rating + c %>
	    <% end %>
	  <% end %>
	  <% d = (c/b.count).round(1) %>
	  <% if d >= 0 %>
	    <%= d %>
	  <% else %>
	    <%= "-" %>
	  <% end %>
  </dd>

</dl>

