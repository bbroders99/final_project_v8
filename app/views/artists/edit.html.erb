<div class="page-header">
  <h1>Editing Artist #<%= @artist.id %></h1>
</div>

<%= form_tag(artist_url(@artist), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :first_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :first_name, @artist.first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :last_name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :last_name, @artist.last_name, class: 'form-control' %>
    </div>
  </div>
<!--
  <div class="form-group">
    <%= label_tag :email, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :email, @artist.email, class: 'form-control' %>
    </div>
  </div>
-->


  <div class="form-group">
    <%= label_tag :bio, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :bio, @artist.bio, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Artist", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

  <div class="row">
     <div class="col-md-offset-2 col-md-6">
       or <%= link_to "Manage Your Account", edit_artist_registration_path, class: 'btn btn-warning' %>
     </div>
  </div>



<!-- Add images for portfolio -->

<div class="page-header">
  <h3>Add Portfolio Image</h3>
</div>

<%= form_tag(portfolio_images_url, method: 'post', class: 'form-horizontal', multipart: true) do %>
  <div class="form-group">
    <%= label_tag :image, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= file_field_tag :image %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Add Portfolio Image", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<!-- Show images for portfolio -->


<div class="page-header">
  <h3>Portfolio images</h3>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Delete</th>

    </tr>
  </thead>

  <tbody>
    <% @artist.portfolio_images.each do |portfolio_image| %>
      <tr>
        <td><%= image_tag portfolio_image.image, :height => 50 %></td>
        <!--<td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, portfolio_image_url(portfolio_image), class: 'btn btn-primary' %></td>-->
        <!--<td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_portfolio_image_url(portfolio_image), class: 'btn btn-warning' %></td>-->
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, portfolio_image_url(portfolio_image), method: 'delete', data: { confirm: "Do you really want to delete this portfolio_image?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>