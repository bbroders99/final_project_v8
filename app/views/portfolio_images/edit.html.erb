<div class="page-header">
  <h1>Editing Portfolio Image #<%= @portfolio_image.id %></h1>
</div>

<%= form_tag(portfolio_image_url(@portfolio_image), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :url, @portfolio_image.url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :artist_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :artist_id, @portfolio_image.artist_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Portfolio Image", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
