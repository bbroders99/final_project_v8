<div class="page-header">
  <h1>New Idea Image</h1>
</div>

<%= form_tag(idea_images_url, method: 'post', class: 'form-horizontal', multipart: true) do %>
  <div class="form-group">
    <%= label_tag :image, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= file_field_tag :image %>
    </div>
  </div>


  <div class="form-group">
    <%= label_tag :idea_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :idea_id, options_from_collection_for_select(Idea.all, :id, :title), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Idea Image", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
