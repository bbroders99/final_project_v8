<div class="page-header">
  <h1>New Idea Image</h1>
</div>

<%= form_tag(idea_images_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :url, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :idea_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :idea_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Idea Image", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
