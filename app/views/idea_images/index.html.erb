<div class="page-header">
  <h1>Idea images</h1>
</div>

<p><%= link_to 'Add a New Idea Image', new_idea_image_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Idea</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @idea_images.each do |idea_image| %>
      <tr>
        <td><%= image_tag idea_image.image, :height => 50 %></td>
        <td><%= idea_image.idea.title %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, idea_image_url(idea_image), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_idea_image_url(idea_image), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, idea_image_url(idea_image), method: 'delete', data: { confirm: "Do you really want to delete this idea_image?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>