<div class="page-header">
  <h1>New Idea</h1>
</div>

<%= form_tag(ideas_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :post_date, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :post_date, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag "Price $", nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :price, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :category, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :category, options_for_select([ "Painting", "Drawing" ]), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :size, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :size, nil, class: 'form-control' %>
    </div>
  </div>
