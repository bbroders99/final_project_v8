<div class="page-header">
  <h1>Bids</h1>
</div>

<p><%= link_to 'Add a New Bid', new_bid_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Idea</th>
      <th>Artist</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.idea.title %></td>
        <td><%= bid.artist.full_name %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, bid_url(bid), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_bid_url(bid), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, bid_url(bid), method: 'delete', data: { confirm: "Do you really want to delete this bid?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

