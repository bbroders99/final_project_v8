<div class="page-header">
  <h1>Buyers</h1>
</div>

<p><%= link_to 'Add a New Buyer', new_buyer_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.first_name %></td>
        <td><%= buyer.last_name %></td>
        <td><%= buyer.email %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, buyer_url(buyer), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_buyer_url(buyer), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, buyer_url(buyer), method: 'delete', data: { confirm: "Do you really want to delete this buyer?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

